      &lt;li&gt;&lt;a href=&quot;#get&quot; id=&quot;markdown-toc-get&quot;&gt;GET&lt;/a&gt;&lt;/li&gt;
      &lt;li&gt;&lt;a href=&quot;#post&quot; id=&quot;markdown-toc-post&quot;&gt;POST&lt;/a&gt;&lt;/li&gt;
